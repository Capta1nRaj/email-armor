    "initialSetup": "./lib/stubs/initialSetup.js"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/inquirer": "^9.0.7",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.15",
    "@types/randomstring": "^1.1.11",
    "@types/react": "^18.2.47",
    "copyfiles": "^2.4.1",
    "eslint": "^8.53.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  }
